#!/bin/sh

if [ `uname` = "syllable" ]
then
	manpath="/boot/Documentation/man"
	browser="/Applications/Webster/Webster"
else
	manpath="/atheos/Documentation/man"

	if [ -e /system/resources/directfb -a "$USER" = "root" ]
	then
		browser="links -g"
	else
		browser="links"
	fi
fi

if [ "$1" = "" ]; then
	echo "Usage: man [section] title"
	exit;
fi

if [ "$2" = "" ]; then
	section="?"
	cmd=$1
else
	section=$1
	cmd=$2
fi

file=`find $manpath -name "$cmd.$section.html" -print | head -n1`

if [ "$file" != "" ]; then
	$browser $file 2>&1 >/dev/null &
#	Text mode:
#	$browser $file &
else
	if [ "$2" = "" ]; then
		echo "No manual entry for $cmd"
	else
		echo "No entry for $cmd in section $section of the manual"
	fi
fi

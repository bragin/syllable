#!/bin/sh

manpath="/boot/Documentation/man"
# Server:
#manpath="/atheos/Documentation/man"
browser="/Applications/ABrowse/ABrowse"
#browser="links -g"
#browser="links"

if [ "$1" = "" ]; then
	echo "Usage: man [section] title"
	exit;
fi

if [ "$2" = "" ]; then
	section="?"
	cmd=$1
else
	section=$1
	cmd=$2
fi

file=`find $manpath -name "$cmd.$section.html" -print | head -n1`

if [ "$file" != "" ]; then
	$browser $file 2>&1 >/dev/null &
#	Text mode:
#	$browser $file &
else
	if [ "$2" = "" ]; then
		echo "No manual entry for $cmd"
	else
		echo "No entry for $cmd in section $section of the manual"
	fi
fi

diff -ru perl-5.10.0-original/hints/linux.sh perl-5.10.0/hints/linux.sh
--- perl-5.10.0-original/hints/linux.sh	2007-12-18 11:47:07.000000000 +0100
+++ perl-5.10.0/hints/linux.sh	2008-03-25 23:01:47.000000000 +0100
@@ -60,9 +60,9 @@
 # We don't use __GLIBC__ and  __GLIBC_MINOR__ because they
 # are insufficiently precise to distinguish things like
 # libc-2.0.6 and libc-2.0.7.
-if test -L /lib/libc.so.6; then
-    libc=`ls -l /lib/libc.so.6 | awk '{print $NF}'`
-    libc=/lib/$libc
+if test -L /system/indexes/lib/libc.so.6; then
+    libc=`ls -l /system/indexes/lib/libc.so.6 | awk '{print $NF}'`
+    libc=/system/indexes/lib/$libc
 fi
 
 # Configure may fail to find lstat() since it's a static/inline
@@ -301,8 +301,9 @@
 # version of -lgdbm which is a bad idea. So if we have 'nm'
 # make sure it can read the file
 # NI-S 2003/08/07
-if [ -r /usr/lib/libndbm.so  -a  -x /usr/bin/nm ] ; then
-   if /usr/bin/nm /usr/lib/libndbm.so >/dev/null 2>&1 ; then
+if [ -r /system/indexes/lib/libndbm.so  -a  -x /usr/indexes/bin/nm ] ; then
+   if /usr/indexes/bin/nm /system/indexes/lib/libndbm.so >/dev/null 2>&1 ; 
+then
     echo 'Your shared -lndbm seems to be a real library.'
    else
     echo 'Your shared -lndbm is not a real library.'
@@ -423,3 +424,7 @@
     libswanted="$libswanted pthread"
     ;;
 esac
+
+#usrinc='/system/indexes/include'
+#ldlibpthname=LIBRARY_PATH
+libpth='/usr/indexes/lib /system/indexes/lib ./'

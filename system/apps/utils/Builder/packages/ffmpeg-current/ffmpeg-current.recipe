authors
	Arno Klenke
	Kaj de Vos
	Kristian Van Der Vliet
status			developing

licenses		LGPL GPL

home			ffmpeg.org
packages		FFMpeg-current
locations		http://mplayerhq.hu/MPlayer/cvs/

configure-options
	--extra-cflags='-DPIC -fomit-frame-pointer'
	--extra-libs='-ldl'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	IPv6 code fails:
	--disable-network
	--disable-v4l
	--disable-audio-oss
;	--disable-audio-beos
	--disable-vhook
	--disable-dv1394
;	Non-free stuff:
	--disable-risky
;	--enable-gpl
;	--enable-libogg
;	--enable-vorbis
;	--enable-theora
;	--enable-mp3lame
;	--enable-xvid
;	--disable-ffserver
;	--disable-ffplay

install-tree	include lib
install-files
	../ffmpeg-current/libavcodec/avcodec.h		include
	../ffmpeg-current/libavcodec/common.h		include
	../ffmpeg-current/libavcodec/rational.h		include
	../ffmpeg-current/libavformat/avformat.h	include
	../ffmpeg-current/libavformat/avio.h		include
	../ffmpeg-current/libavformat/rtp.h			include
	../ffmpeg-current/libavformat/rtsp.h		include
	../ffmpeg-current/libavformat/rtspcodes.h	include
	libavcodec/libavcodec.a						lib
	libavformat/libavformat.a					lib
documentation
	README COPYING Changelog CREDITS doc/TODO
;	doc/*.txt


authors
	Arno Klenke
	Kaj de Vos
status			developing

licenses		LGPL GPL

home			ffmpeg.org
packages		FFMpeg-current
locations		http://mplayerhq.hu/MPlayer/cvs/

; For MMX:
build-needs		make >= 3.80

no-build-dir
configure-options
	--extra-cflags='-DPIC -fomit-frame-pointer'
	--extra-libs='-ldl'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	MMX fails assertion in Make 3.79.x:
;	--disable-mmx
	--disable-v4l
	--disable-audio-oss
;	--disable-audio-beos
	--disable-vhook
	--disable-dv1394
;	Non-free stuff:
	--disable-risky
;	--enable-gpl
;	--enable-libogg
;	--enable-vorbis
;	--enable-theora
;	--enable-mp3lame
;	--enable-xvid
;	--disable-ffserver
;	--disable-ffplay

install-tree	include lib
install-files
	libavcodec/avcodec.h		include
	libavcodec/common.h			include
	libavcodec/rational.h		include
	libavformat/avformat.h		include
	libavformat/avio.h			include
	libavformat/rtp.h			include
	libavformat/rtsp.h			include
	libavformat/rtspcodes.h		include
	libavcodec/libavcodec.a		lib
	libavformat/libavformat.a	lib
documentation
	README COPYING Changelog CREDITS doc/TODO
;	doc/*.txt


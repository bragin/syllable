test-targets		test

install-tree
	bin
	lib
	IoVM
	IoServer
	IoServer/Blowfish
	IoServer/CGI
;	IoServer/Compression
	IoServer/Curses
;	IoServer/DBI
	IoServer/Directory
	IoServer/FFT
	IoServer/Fnmatch
	IoServer/Geometry

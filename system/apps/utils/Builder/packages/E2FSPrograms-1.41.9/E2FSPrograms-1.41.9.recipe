authors				Kaj de Vos
status				testing
warnings			Assumes system installation!

inherits			sourceforge

headline			Ext2/3/4 filesystem utilities
description
	The Ext2 Filesystem Utilities (e2fsprogs) contain all of the standard utilities for creating, fixing, configuring , and debugging ext2 filesystems. They also supports the ext3 and ext4 filesystems.
licenses			GPL BSD

home				e2fsprogs.sourceforge.net
packages			e2fsprogs/e2fsprogs-1.41.9

conflicts			UtilLinuxNG

;build-dir			build

configure-options
;	--with-root-prefix=''
	--sysconfdir=/system/resources/E2FSPrograms/1.41.9/settings
	--enable-elf-shlibs
;	Delivered by UtilLinuxNG:
	--disable-fsck
	--disable-libblkid
	--disable-libuuid
	--disable-uuidd

system-prefix-var	DESTDIR
;install-tree		settings
install-targets
	install
;	Static libraries and headers:
	install-libs

documentation
	README COPYING ABOUT-NLS RELEASE-NOTES
;	doc/*
build-docs			INSTALL*
internal-docs		SUBMITTING-PATCHES SHLIBS

; Linked into mount, which is called before the loader path is set:
_links
	framework/libraries/libblkid.so.1	/system/resources/glibc/2.7/framework/libraries/
	framework/libraries/libuuid.so.1	/system/resources/glibc/2.7/framework/libraries/

      contain SCSI disks.  */
   sprintf (name, "/dev/hd%d", unit);
+#elif defined(__SYLLABLE__)
+  /* Syllable */
+  sprintf (name, "/dev/disk/ata/hd%c/raw", 'a' + unit );

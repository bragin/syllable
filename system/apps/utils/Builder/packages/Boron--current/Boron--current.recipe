;	--gnu-readline
	--thread
;	--bzip2
;	--assemble
	--timecode

pre-make
	cd doc &&
	make
;	make dox html pdf
post-make			sed -i 's~"urlan.h"~<boron/urlan.h>~' boron.h

install-tree
	programs

authors
	Kristian Van Der Vliet
	Kaj de Vos
status				testing
warnings			GLibC has a circular dependency on the LibGCC library in GCC.

inherits			gnu

licenses			LGPL BSD other
home				www.gnu.org/software/libc/
packages			glibc/glibc-2.7

build-needs
;	glibc
;	autoconf >= 2.53
	make >= 3.79
	binutils >= 2.15
	gcc >= 3.4
	sed >= 3.02
	gawk >= 3
;	gettext >= 0.10.36
;	gperf
build-recommends	texinfo >= 3.12f
test-needs
	bash <> 2.03
	perl >= 5

; BASh is broken for this locale:
patch				sed -i '/vi_VN.TCVN/d' localedata/SUPPORTED

;make-targets
;	all
;	For printed documentation:
;	dvi

; Non-interactive:
test-options		-k

_install-env
	LANGUAGE	C
	LC_ALL		C
install-targets
	install
	localedata/install-locales

documentation
	README BUGS INSTALL COPYING.LIB COPYING LICENSES NEWS ChangeLog FAQ CONFORMANCE README.libm PROJECTS
;	ChangeLog.*
develop-docs
	NOTES
;	NAMESPACE
	manual/examples
	WUR-REPORT

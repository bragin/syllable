authors
	Kurt Skauen
	Kaj de Vos
	Arno Klenke
	Kristian Van Der Vliet
	Jake Hamby
maintainers			Kaj de Vos
status				testing

needs
;	Due to new atomics definitions:
	Syllable >= 0.5.5
;	For -O3 with -fpic:
	binutils >= 2.13.1
;	Syllable switched to the new GLibC ABI in combination with this version of GCC:
	glibc >= 2.3.3
build-needs
;	autoconf 2.57
	make <> 3.81
;	Without make bootstrap:
;	gcc >= 2.95
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison

;patch
;	cd gcc
;	autoconf

configure-options
	--enable-languages=c,c++
;		Fortran doesn't build with the new GLibC 2.3.x:
;		,f77
;		,treelang
;		Won't do --enable-shared:
;		,objc
;		,java,ada
	--with-arch=i586
	--enable-sjlj-exceptions
	--enable-shared
	--enable-threads
	--with-system-zlib
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local

make-env
	BOOT_CFLAGS		'-O'
make-vars
	CFLAGS			'-O'
	LIBCFLAGS		'-O2'
	LIBCXXFLAGS		'-O2'
;					GCC seems to set this automatically:
;					' -fno-implicit-templates'
make-targets
;	Safest when compiling natively:
	bootstrap
;	For printed documentation:
;	dvi

;test-env
;	TCL_LIBRARY		'/usr/tcl'
;	DEJAGNULIBS		'/usr/dejagnu'

links
	gcc				bin/cc
	libgcc.a		lib/gcc/i586-pc-syllable/3.4.6/libgcc_static.a

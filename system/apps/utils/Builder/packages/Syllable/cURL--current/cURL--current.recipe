authors				Kaj de Vos
status				testing

needs				C-AsyncResolver >= 1.6
;needs				C-AsyncResolver >= 1.4 < 1.5
recommends
	zlib
	OpenSSL | gnutls | yassl
	openldap
	kerberos4
	heimdal
	fbopenssl
	libidn
	libssh2 >= 0.16

make-shared

configure-options
	--with-random=/dev/random
	--with-ca-path=/etc/ssl/certs
;	--with-ca-bundle=/etc/ssl/ca-bundle.crt
;	GLibC's DNS resolver is not threadsafe yet on Syllable:
	--enable-ares
;	C-ARes isn't IPv6 compatible yet:
;	--disable-ipv6
;	--without-ssl
;	--with-gnutls
;	--with-libssh2
	--enable-ldap
;	Doesn't seem to help:
	--enable-manual

authors
	Kristian Van Der Vliet
	Kaj de Vos
status				testing

needs				Syllable >= 0.6.5

;patch				autoconf

configure-options
	--enable-hacker-mode
	--enable-add-ons=syllable
;	--disable-profile
;	--with-headers=/usr/include
	--without-cvs
;	There is no TLS support on Syllable:
	--without-__thread
;	Prevent linking against the host:
;	--without-gd
;	--with-cpu=
;	--enable-bounded

links
;	For init:
	/boot/system/resources/glibc/2.7/lib/libc.so.2	/system/libraries/
;	/boot/system/resources/glibc/2.7/lib/libm.so.2	/system/libraries/
;	For GhostScript:
	/system/indexes/include/sys/dir.h				/usr/include/sys
	/system/indexes/include/sys/time.h				/usr/include/sys

authors				Kaj de Vos
status				testing

build-needs
;	Without make bootstrap:
	gcc >= 2.95
;	For Fortran:
;	gmp
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison
;	For documentation (only really needed for TreeLang?):
	texinfo

configure-options
	--enable-languages=c,c++
;		,treelang
;		,fortran
;		,objc
;		,java,ada
	--with-arch=i486
	--enable-shared
	--enable-threads=posix
	--enable-clocale=gnu
	--enable-__cxa_atexit
	--with-system-zlib
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local
;	--libexecdir=/usr/lib
	i486-pc-linux-gnu

make-env			BOOT_CFLAGS '-O'

links
	gcc				bin/cc
	libgcc.a		lib/gcc/i486-pc-linux-gnu/4.2.3/libgcc_static.a
;	For some packages:
;	bin/cpp			lib/
;	For WebKit:
;	gcc				/usr/bin/


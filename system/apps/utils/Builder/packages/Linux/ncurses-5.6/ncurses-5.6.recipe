authors				Kaj de Vos
status				testing

configure-options
	--with-shared
	--without-debug
;	--with-termlib
	--enable-widec
	--enable-symlinks
;	--datadir=/usr/share
	--with-default-terminfo-dir=/usr/share/terminfo

pre-register
	rm lib/libncurses.so
	rm lib/libcurses.so
	rm lib/libform.so
	rm lib/libpanel.so
	rm lib/libmenu.so
	rm lib/libcursesw.so
	echo 'INPUT(-lncursesw)'	> lib/libncurses.so
	echo 'INPUT(-lcursesw)'		> lib/libcurses.so
	echo 'INPUT(-lformw)'		> lib/libform.so
	echo 'INPUT(-lpanelw)'		> lib/libpanel.so
	echo 'INPUT(-lmenuw)'		> lib/libmenu.so
	echo 'INPUT(-lncursesw)'	> lib/libcursesw.so

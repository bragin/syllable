	install-service-dhclient
;	DHCP server:
	install-dhcp
;	BIND DNS server:
	install-bind
;	Apache web server:
	install-apache
;	SaMBa server:
	install-samba
	install-winbind
;	VSFTPD FTP server:
	install-vsftpd
;	RSync server:
	install-rsyncd
;	D-Bus:
	install-dbus
;	HAL:
	install-haldaemon


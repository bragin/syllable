authors				Kaj de Vos
status				testing

build-needs
;	autoconf 2.57
;	Without make bootstrap:
	gcc >= 2.95
;	For Fortran:
;	gmp
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison

configure-options
	--enable-languages=c,c++,treelang
;		,fortran
;		,objc
;		,java,ada
	--with-arch=i486
	--enable-shared
	--enable-threads=posix
	--enable-clocale=gnu
	--enable-__cxa_atexit
	--with-system-zlib
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local
;	--libexecdir=/usr/lib
	i486-pc-linux-gnu

make-env			BOOT_CFLAGS '-O'

_install-env
	PATH		"$PATH:$STAGE/gcc/bin:$STAGE/bootstrap/gcc/bin:$IMAGE/gcc/bin:$IMAGE/usr/gcc/bin:/usr/gcc/bin"

links
	gcc				bin/cc
	libgcc.a		lib/gcc/i486-pc-linux-gnu/4.1.2/libgcc_static.a
;	For some packages:
;	bin/cpp			lib/
;	For WebKit:
;	gcc				/usr/bin/

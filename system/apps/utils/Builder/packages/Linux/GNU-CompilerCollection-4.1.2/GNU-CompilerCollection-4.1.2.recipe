authors				Kaj de Vos
status				testing

build-needs
;	Without make bootstrap:
	gcc >= 2.95
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison

configure-options
	--enable-languages=c,c++
;		,treelang
;		,fortran
;		,objc
;		,java,ada
	--with-arch=i486
	--enable-shared
	--enable-threads=posix
	--enable-clocale=gnu
	--enable-__cxa_atexit
	--with-system-zlib
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local
;	--libexecdir=/usr/lib
	i486-pc-linux-gnu

make-env			BOOT_CFLAGS '-O'

; Needs itself during installation, before registration?
_install-env
	PATH			"$STAGE/GNU-CompilerCollection/programs:$STAGE/bootstrap/GNU-CompilerCollection/programs:$IMAGE/resources/GNU-CompilerCollection/programs:$IMAGE/system/resources/GNU-CompilerCollection/4.1.2/programs:$PATH"

links
	framework/headers/	include
;	Fix broken internal links:
	headers/			framework/include
;	/system/development/resources/GNU-CompilerCollection/4.1.2/framework/headers/ framework/include
	gcc					programs/cc
	libgcc.a			framework/libraries/gcc/i486-pc-linux-gnu/4.1.2/libgcc_static.a
;	For some packages:
;	programs/cpp		framework/libraries/
;	For WebKit:
;	programs/gcc		/usr/bin/

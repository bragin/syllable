authors				Kaj de Vos
status				testing

needs
;	For -O3 with -fpic:
	binutils >= 2.13.1
	glibc >= 2.3.3
build-needs
;	Without make bootstrap:
;	gcc >= 2.95
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison

configure-options
	--enable-languages=c,c++
;		Fortran doesn't build with the new GLibC 2.3.x:
;		,f77
;		,treelang
;		,objc
;		,java,ada
	--with-arch=i486
	--enable-shared
	--enable-threads=posix
;	For GCC 4?
;	--enable-clocale=gnu
;	--enable-__cxa_atexit
	--with-system-zlib
;	?:
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local
	i486-pc-linux-gnu

make-env
	BOOT_CFLAGS		'-O'
make-vars
	CFLAGS			'-O'
	LIBCFLAGS		'-O2'
	LIBCXXFLAGS		'-O2'
;					GCC seems to set this automatically:
;					' -fno-implicit-templates'
make-targets
;	Safest when compiling natively:
	bootstrap
;	For printed documentation:
;	dvi

;test-env
;	TCL_LIBRARY		'/usr/tcl'
;	DEJAGNULIBS		'/usr/dejagnu'

links
	gcc				bin/cc
	libgcc.a		lib/gcc/i486-pc-linux-gnu/3.4.6/libgcc_static.a

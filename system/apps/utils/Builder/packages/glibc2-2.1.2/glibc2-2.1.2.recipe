authors
	Kurt Skauen
	Kristian Van Der Vliet
	Kaj de Vos
maintainers			Kaj de Vos
status				testing

licenses			LGPL
home				www.gnu.org/software/libc/
packages
	glibc-2.1.2
;	glibc-crypt-2.1.2
;locations			ftp://ftp.gwdg.de/pub/linux/glibc/

build-needs
	autoconf 2.13
;	This problem is patched:
;	gcc 2.95.2
	gcc < 3
	gettext >= 0.10.35
;build-recommends	texinfo <
test-needs
	bash <> 2.03
	perl

patch-config		scripts
patch				autoconf

no-build-dir

configure-env		CFLAGS '-D__SYLLABLE__ -march=i586 -O2 -pipe'
configure-options
	--disable-versioning
;	--enable-add-ons
;	--with-headers=/usr/include
;	--enable-libio
;	--enable-bounded
;	--disable-profile
;	--without-cvs

;make-targets
;	For printed documentation:
;	dvi

install-env			CFLAGS '-D__SYLLABLE__ -march=i586 -O2 -pipe'
;install-prefix-var	install_root
system-files
	lib/*.so	system/libs
	lib/*.so.*	system/libs
documentation
	README BUGS INSTALL COPYING COPYING.LIB NEWS ChangeLog FAQ INTERFACE CONFORMANCE README.libm PROJECTS NOTES
	manual/examples

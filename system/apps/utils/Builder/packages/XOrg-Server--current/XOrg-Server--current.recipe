authors				Kaj de Vos
warnings			Hardwired to run in /resources/!

inherits			XOrg

; Last one with SDL:
version				1.7.1
headline			X11 Window System display server
description
	The X.Org project provides an open source implementation of the X Window System.

packages			xserver/xorg-server-1.7.1

needs
	OpenSSL
	PixelManipulation
;	Doesn't link to it:
	LibraryX11
	LibraryXAuthorization
	LibraryXKeyboardFile
	LibraryXFonts
build-needs
	XProtocol >= 7.0.13
	XExtensionsProtocol
	XBigRequestsProtocol
	XCMiscProtocol
	XInputProtocol
	XKeyboardProtocol
	XRAndRProtocol
	XFixesProtocol
	XDamageProtocol
	XFontsProtocol
	XRenderProtocol
	XTransport
run-needs
	XKeyboardConfigure
	XKeymapCompiler
recommends
	GLib
	Mesa3D
	SDL

no-bindir
no-libdir
no-datarootdir
no-datadir
configure-options
;	--with-os-name=
	--enable-install-setuid
;	--disable-ipv6
;	--disable-unix-transport
	--enable-kdrive
;	--enable-xsdl
	--disable-xorg
;	--disable-xvfb
	--disable-drm
;	--disable-drm2
	--disable-glx
;	--disable-mitshm
	--disable-xres
;	--disable-xf86bigfont
	--disable-composite
	--disable-screensaver
	--disable-xinerama
	--disable-xv

documentation		COPYING ChangeLog

links
	/resources/index/programs/				bin
	/resources/index/framework/libraries/	lib
	/resources/index/data/					share

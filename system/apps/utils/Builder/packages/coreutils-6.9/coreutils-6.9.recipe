authors
	Kaj de Vos
	Jake Hamby
status				testing

inherits			gnu

headline			GNU core utilities
description
	The GNU Core Utilities are the basic file, shell and text manipulation utilities of the GNU operating system. These are the core utilities which are expected to exist on every operating system.
licenses			GPL

home				www.gnu.org/software/coreutils/
packages			coreutils/coreutils-6.9

build-needs
	coreutils
	perl
install-needs		coreutils

; For GLibC 2.7:
patch				sed -i s/futimens/cu_&/ src/{copy,touch}.c lib/utimens.{c,h}

system-prefix-var	DESTDIR

documentation		README COPYING ABOUT-NLS NEWS ChangeLog TODO AUTHORS THANKS THANKS-to-translators
links
;	For she-bang lines:
	programs/env		/usr/bin/
;	For GLibC:
	programs/pwd		/bin/
;	For JEd, S-Lang:
	programs/cp			/bin/
	programs/rm			/bin/
	programs/ln			/bin/
;	For NcFTP:
	programs/ls			/bin/
;	For SaMBa:
	programs/echo		/bin/
;	For FindUtils:
	programs/sort		/bin/
;	For DHCP early initalisation:
	programs/sleep		/bin/
;	For SUDo:
	programs/mv			/bin/
;	For SysKLogD:
	programs/install	/usr/bin/
;	For general POSIX compatibility:
	programs/cat		/bin/
	programs/chgrp		/bin/
	programs/chmod		/bin/
	programs/chown		/bin/
	programs/date		/bin/
	programs/dd			/bin/
	programs/false		/bin/
	programs/hostname	/bin/
	programs/mkdir		/bin/
	programs/rmdir		/bin/

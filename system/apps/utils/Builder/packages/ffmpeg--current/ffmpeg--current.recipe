authors
	Arno Klenke
	Kaj de Vos
	Kristian Van Der Vliet
status				testing
notes
	Tested with FFMPEG SVN snapshot May 3, 2007.
	Can't be build image'd.

inherits			sourceforge

licenses			LGPL GPL
home				ffmpeg.org
packages
	syllable/ffmpeg-8879
;	ffmpeg-export-snapshot
;locations			http://ffmpeg.mplayerhq.hu
archives			svn://svn.mplayerhq.hu/ffmpeg/trunk ffmpeg

build-needs
	bash <> 2.03
	make >= 3.80
;needs				liba52

configure-options
	--extra-cflags='-DPIC -fomit-frame-pointer'
	--extra-libs='-ldl -lm'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	--disable-ffserver
;	--disable-ffplay
;	--disable-mmx
;	IPv6 code used to fail (on GLibC 2.1.2?):
;	--disable-network
;	--disable-ipv6
	--disable-v4l
;	--disable-v4l2
	--disable-audio-oss
;	--disable-audio-beos
	--disable-vhook
	--disable-dv1394
	--enable-gpl
	--enable-pp
;	--enable-liba52
;	--enable-libfaad
;	--enable-libogg
;	--disable-demuxer=OGG
;	--enable-libvorbis
;	--enable-libtheora
;	--enable-libmp3lame
;	--enable-x264
;	--enable-xvid

install-files
	../_ffmpeg--current/config.h				include/ffmpeg
	../ffmpeg--current/libavformat/allformats.h	include/ffmpeg

documentation
	README COPYING Changelog CREDITS MAINTAINERS doc/TODO
;	doc/*.txt
build-docs			INSTALL
internal-docs		doc/soc.txt	doc/optimization.txt

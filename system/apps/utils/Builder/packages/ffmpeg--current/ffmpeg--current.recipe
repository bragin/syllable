authors
	Arno Klenke
	Kaj de Vos
	Kristian Van Der Vliet
status			developing
notes			Tested with FFMPEG CVS snapshot August 21 2005

licenses		LGPL GPL

build-needs		make >= 3.80

home			ffmpeg.org
;packages		FFMpeg-current
locations
;	http://mplayerhq.hu/MPlayer/cvs/
	http://ftp.syllable-norden.info/Archive/2006/04/

configure-options
	--extra-cflags='-DPIC -fomit-frame-pointer'
	--extra-libs='-ldl -lm'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	IPv6 code used to fail (on GLibC 2.1.2?):
;	--disable-network
	--disable-v4l
	--disable-audio-oss
;	--disable-audio-beos
	--disable-vhook
	--disable-dv1394
	--enable-gpl
	--enable-a52
	--enable-pp
;	--enable-libogg
;	--enable-vorbis
;	--enable-theora
;	--enable-mp3lame
;	--enable-xvid
;	--disable-ffserver
;	--disable-ffplay

install-tree	include lib
install-files
	../ffmpeg--current/libavcodec/avcodec.h				include
	../ffmpeg--current/libavformat/avformat.h			include
	../ffmpeg--current/libavformat/avio.h				include
	../ffmpeg--current/libavformat/rtp.h				include
	../ffmpeg--current/libavformat/rtsp.h				include
	../ffmpeg--current/libavformat/rtspcodes.h			include
	../ffmpeg--current/libavutil/avutil.h				include
	../ffmpeg--current/libavutil/common.h				include
	../ffmpeg--current/libavutil/mathematics.h			include
	../ffmpeg--current/libavutil/rational.h				include
	../ffmpeg--current/libavutil/integer.h				include
	../ffmpeg--current/libavutil/intfloat_readwrite.h	include
	../ffmpeg--current/config.h							include
	libavcodec/libavcodec.a								lib
	libavformat/libavformat.a							lib
	libavutil/libavutil.a								lib
documentation
	README COPYING Changelog CREDITS doc/TODO
;	doc/*.txt


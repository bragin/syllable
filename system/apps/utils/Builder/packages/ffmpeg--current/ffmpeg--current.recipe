authors
	Arno Klenke
	Kaj de Vos
	Kristian Van Der Vliet
status				testing
notes				Tested with FFMPEG SVN snapshot Dec 23, 2007

licenses			LGPL GPL
home				ffmpeg.org
packages
	FFMPEG-11308.source
;	ffmpeg-export-snapshot
locations
	http://downloads.syllable.org/sources/resources/FFMPEG/
;	http://ffmpeg.mplayerhq.hu
archives			svn://svn.mplayerhq.hu/ffmpeg/trunk FFMPEG

build-needs
	bash <> 2.03
	make >= 3.80
;needs				liba52

configure-options
	--extra-cflags='-fomit-frame-pointer'
;	--extra-libs='-ldl -lm'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	--disable-ffserver
;	--disable-ffplay
;	--disable-mmx
;	IPv6 code used to fail (on GLibC 2.1.2?):
;	--disable-network
;	--disable-ipv6
	--disable-vhook
	--enable-gpl
	--enable-pp
;	--enable-liba52
;	--enable-libfaad
;	--enable-libogg
;	--disable-demuxer=OGG
;	--enable-libvorbis
;	--enable-libtheora
;	--enable-libmp3lame
;	--enable-libx264
;	--enable-libxvid

system-prefix-var	DESTDIR
install-files
	../_ffmpeg--current/config.h				include/ffmpeg
;	../ffmpeg--current/libavformat/allformats.h	include/ffmpeg
;	../ffmpeg--current/libavcodec/allcodecs.h	include/ffmpeg

documentation
	README COPYING.GPL COPYING.LGPL Changelog CREDITS MAINTAINERS doc/TODO
;	doc/*.txt
build-docs			INSTALL
internal-docs		doc/soc.txt	doc/optimization.txt

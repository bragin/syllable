authors
	Arno Klenke
	Kaj de Vos
	Kristian Van Der Vliet
status				developing
notes				Tested with FFMPEG SNV snapshot September 12, 2006

inherits			sourceforge

licenses			LGPL GPL
home				ffmpeg.org
packages			syllable/ffmpeg-6239
;locations			http://mplayerhq.hu/MPlayer/cvs/
archives			svn://svn.mplayerhq.hu/ffmpeg/trunk ffmpeg

build-needs
	bash <> 2.03
	make >= 3.80

configure-options
	--extra-cflags='-DPIC -fomit-frame-pointer'
	--extra-libs='-ldl -lm'
;	--enable-shared
;	--enable-pthreads
	--disable-debug
;	--disable-mmx
;	IPv6 code used to fail (on GLibC 2.1.2?):
;	--disable-network
	--disable-v4l
	--disable-audio-oss
;	--disable-audio-beos
	--disable-vhook
	--disable-dv1394
	--enable-gpl
	--enable-a52
	--enable-pp
;	--enable-libogg
;	--enable-vorbis
;	--enable-theora
;	--enable-mp3lame
;	--enable-xvid
;	--disable-ffserver
;	--disable-ffplay

install-files		../_ffmpeg--current/config.h include/ffmpeg
documentation
	README COPYING Changelog CREDITS MAINTAINERS doc/TODO
;	doc/*.txt
build-docs			INSTALL
internal-docs
	doc/soc.txt
	doc/optimization.txt


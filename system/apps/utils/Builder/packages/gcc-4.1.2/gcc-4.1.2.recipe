authors
	Kurt Skauen
	Kaj de Vos
	Arno Klenke
	Kristian Van Der Vliet
	Jake Hamby
maintainers			Kaj de Vos
status				testing
warnings
	Build breaks with GCC 4.1.x itself installed.
	GCC has a circular dependency on GLibC.
;	LibIberty is both in BinUtils and in GCC.
notes				GMP with MPFR support is required to build Fortran

inherits			gnu

licenses			GPL LGPL GFDL
home				gcc.gnu.org
packages
	gcc/gcc-4.1.2/gcc-4.1.2
;	gcc/gcc-4.1.2/gcc-core-4.1.2
;	gcc/gcc-4.1.2/gcc-g++-4.1.2
;	gcc/gcc-4.1.2/gcc-objc-4.1.2
;	gcc/gcc-4.1.2/gcc-java-4.1.2
;	gcc/gcc-4.1.2/gcc-g77-4.1.2
;	gcc/gcc-4.1.2/gcc-ada-4.1.2
;	gcc/gcc-4.1.2/gcc-testsuite-4.1.2
;locations			ftp://gcc.gnu.org/pub/gcc/releases/gcc-4.1.2/

needs
;	For -O3 with -fpic:
	binutils >= 2.13.1
;	Syllable switched to the new GLibC ABI:
	glibc >= 2.3.3
build-needs
	Syllable >= 0.6.4
;	autoconf 2.57
;	Without make bootstrap:
	gcc >= 2.95 < 4
;	libtool
;	For Fortran:
;	gmp
;	For Ada:
;	gnat >= 3.13 | gcc >= 3.1
	gawk
;	bison
build-recommends
;	diffutils
;	For documentation:
	texinfo
recommends			mktemp
test-needs			dejagnu >= 1.4.1
;conflicts			binutils

;patch
;	cd gcc
;	autoconf
; Doesn't work:
;make-shared

configure-options
	--enable-languages=c,c++
;		Fortran doesn't build with the new GLibC 2.3.x:
;		,fortran
;		,treelang
;		Won't do --enable-shared:
;		,objc
;		,java,ada
	--with-arch=i586
	--enable-sjlj-exceptions
	--enable-shared
	--enable-threads
	--with-system-zlib
	--disable-libstdcxx-pch
;	--with-local-prefix=/usr/local

make-env
	BOOT_CFLAGS		'-O'
;	DLL_PATH		"$DLL_PATH:$PWD/gcc"
make-vars
	CFLAGS			'-O'
	LIBCFLAGS		'-O2'
	LIBCXXFLAGS		'-O2'
;					GCC seems to set this automatically:
;					' -fno-implicit-templates'
make-targets
;	Safest when compiling natively:
	bootstrap
;	For printed documentation:
;	dvi

;test-env
;	TCL_LIBRARY		'/usr/tcl'
;	DEJAGNULIBS		'/usr/dejagnu'
; Don't stop at errors:
test-options		-k

;install-prefix-var	DESTDIR
; Needs itself during installation (assumes no parent directory for the build):
install-env
	PATH		"$PATH:../stage/gcc/bin:../stage/bootstrap/gcc/bin:../stage/image/gcc/bin:../../stage/image/usr/gcc/bin:/usr/gcc/bin"
;	DLL_PATH	"$DLL_PATH:../stage/gcc/lib:../stage/bootstrap/gcc/lib:../stage/image/gcc/lib:../../stage/image/usr/gcc/lib:/usr/gcc/lib"

; LFS prefers the one from BinUtils:
;delete-files		lib/libiberty.a

documentation
	README FAQ faq.html BUGS bugs.html COPYING COPYING.LIB NEWS ChangeLog MAINTAINERS
	ABOUT-NLS gcc/ABOUT-GCC-NLS
build-docs			INSTALL
links
	gcc				bin/cc
	libgcc.a		lib/gcc/i586-pc-syllable/4.1.2/libgcc_static.a
;	For some packages:
;	bin/cpp			lib/

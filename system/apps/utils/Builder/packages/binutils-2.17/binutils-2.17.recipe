	../../bin/ld				i586-pc-syllable/bin/ld
	../../bin/nm				i586-pc-syllable/bin/nm
	../../bin/objdump			i586-pc-syllable/bin/objdump
	../../bin/ranlib			i586-pc-syllable/bin/ranlib
	../../bin/strip				i586-pc-syllable/bin/strip

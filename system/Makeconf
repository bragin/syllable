# Set some global variables for the sub-Makefiles

export ATHEOS_SRC := $(PWD)
export ATHEOS_INCLUDE_PATH := $(PWD)/sys/include
export ATHEOS_LIB_PATH := $(PWD)/libs

export BUILD_TOOLS := $(ATHEOS_SRC)/build-tools
export DIST_DIR := $(PWD)/dist-root

# Change this line to 'n' if you do not want to build
# Glibc from source.

export BUILD_LIBC := y

# Set this to the version of the distribution you are building

DIST_VER:=0.4.2a
export DIST_NAME=base-syllable-$(DIST_VER).tgz


